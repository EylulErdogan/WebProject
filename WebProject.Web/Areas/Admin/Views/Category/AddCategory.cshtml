@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebProject.Entities
@model WebProject.Web.Areas.Admin.Models.CategoryModel
@{
	Layout = "_Layout";
}
<div class="card">
	<div class="card-body card-body">
		<h2>Yeni Kategori</h2>
		<form asp-controller="Category" asp-action="AddCategory" method="post">
			<div class="modal-body row">
				<div class="input-group mb-3 col-6">
					<div class="form-group col">
						<label for="Name">Ürün Adı</label>
						<input class="form-control" type="text" asp-for="Name" placeholder="Kategori Adı" />
					</div>
				</div>
			</div>
			<div class="modal-footer justify-content-between">
				<a type="button" class="btn btn-default" href="/admin/category/index">
					Kapat
				</a>
				<button type="submit" class="btn btn-primary">Ürün Ekle</button>
			</div>
		</form>
	</div>
</div>