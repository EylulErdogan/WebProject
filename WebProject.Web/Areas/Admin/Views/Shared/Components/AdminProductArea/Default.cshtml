@model WebProject.Entities.Product

<div class="modal fade" id="modal-add">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Ürünler</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form asp-controller="Product" asp-action="AddProduct" method="post">
				<div class="modal-body row">
					<div class="input-group mb-3 col-6">
						<div class="form-group">
							<label for="Name">Ürün Adı</label>
							<input type="text" asp-for="Name" placeholder="Ürün Adı" />
						</div>
					</div>
					<div class="input-group mb-3 col-6">
						<div class="form-group">
							<label for="Price">Ürün Fiyatı</label>
							<input type="number" asp-for="Price" placeholder="Ürün Fiyatı" />
						</div>
					</div>
					<div class="input-group mb-3 col-6">
						<div class="form-group">
							<label for="Price">Ürün Linki</label>
							<input type="text" asp-for="SeoLink" placeholder="Ürün Linki" />
						</div>
					</div>
					<div class="input-group mb-3 col-6">
						<div class="form-group">
							<label for="Price">Ürün Açıklaması</label>
							<input type="text" asp-for="ProductDescription" placeholder="Ürün Açıklaması" />
						</div>
					</div>
				</div>
				<div class="modal-footer justify-content-between">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Ürün Ekle</button>
				</div>
			</form>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
