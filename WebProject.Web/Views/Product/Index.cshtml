@model WebProject.Business.Models.ProductControllerHandlerModel
@{
	Layout = "_Layout";
}


<div class="product-details-area pt-100px pb-100px">
    <div class="container">
	    <div class="row">
            
		    @{
			    var firstImage = Model.Images.OrderBy(x => x.Sort).FirstOrDefault();
			    var images = Model.Images;
		    }
		    <div class="col-lg-6 col-sm-12 col-xs-12 mb-lm-30px mb-md-30px mb-sm-30px">
			    <!-- Swiper -->
			    <div class="swiper-container zoom-top">
				    <div class="swiper-wrapper">
					    @foreach (var productImage in images)
					    {
						    <div class="swiper-slide zoom-image-hover">
							    <img class="img-responsive m-auto" src="@productImage.ImageUrl"
							         alt="">
						    </div>
					    }
				    </div>
			    </div>
			    <div class="swiper-container zoom-thumbs mt-3 mb-3">
				    <div class="swiper-wrapper">
					    @foreach (var productImage in images)
					    {
						    <div class="swiper-slide ">
							    <img class="img-responsive m-auto" src="@productImage.ImageUrl"
							         alt="">
						    </div>
					    }
				    </div>
			    </div>
		    </div>
            <div class="col-lg-6 col-sm-12 col-xs-12" data-aos="fade-up" data-aos-delay="200">
                <div class="product-details-content quickview-content">
                    <h2>@Model.Product.Name</h2>
                    <div class="pricing-meta">
                        <ul>
                            <li class="old-price not-cut">@Model.Product.Price.ToString("C")</li>
