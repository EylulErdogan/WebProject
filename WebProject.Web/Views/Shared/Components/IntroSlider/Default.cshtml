                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-7 col-md-7 col-sm-7 d-flex justify-content-center position-relative">
                            <div class="show-case">
                                <div class="hero-slide-image">
                                    <img src="@item.ImageUrl" alt="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
            }
