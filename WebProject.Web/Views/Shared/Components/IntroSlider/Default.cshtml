@model IList<WebProject.Entities.Slider> 
<!-- Hero/Intro Slider Start -->
<div class="section ">
    <div class="hero-slider swiper-container slider-nav-style-1 slider-dot-style-1">
        <!-- Hero slider Active -->
        <div class="swiper-wrapper">
	        <!-- Single slider item -->
            @foreach (var item in Model)
